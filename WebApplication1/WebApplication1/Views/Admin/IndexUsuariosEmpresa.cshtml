@model IEnumerable<CapaEntidades.RegistroUsuario>

@{
    ViewBag.Title = "Usuarios Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<h2>Usuarios tipo empresa</h2>
<h4>Aqui podras ver todos aquellos usuarios que son registrados como empresa</h4>

<button type="submit" class="Botones">@Html.ActionLink("Crear nuevo usuario", "Create")</button>
<br />
<br />

<div id="global">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contrasena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmarContrasena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario.tipoUsuario1)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contrasena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmarContrasena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoUsuario.tipoUsuario1)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.idUsuario }) |
                    @Html.ActionLink("Details", "Details", new { id=item.idUsuario }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.idUsuario })
                </td>
            </tr>
}

    </table>
</div>

<h4>
    <a href='@Url.Action("dasboardAdmin", "Admin")'>
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    </a>    Regresar
</h4>

