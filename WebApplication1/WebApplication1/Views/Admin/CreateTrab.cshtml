@model CapaEntidades.Trabajo

@{
    ViewBag.Title = "CreateTrab";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear nuevo trabajo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

